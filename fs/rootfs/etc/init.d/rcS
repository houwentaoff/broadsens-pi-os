#! /bin/sh

# for mount devpts
mkdir -p /dev/pts

/bin/mount -a
/bin/hostname -F /etc/hostname

mdev -s

# modules load
modprobe rfkill
modprobe cfg80211
modprobe brcmutil
modprobe brcmfmac
modprobe industrialio
modprobe industrialio-buffer-cb
modprobe kfifo_buf
modprobe i2c_bcm2708
modprobe i2c_dev
sleep 1

# network config
#wpa_supplicant -i wlan0 -c /etc/wpa_supplicant.conf &
ifconfig eth0 up
#ifconfig wlan0 up
#ifconfig wlan0 192.168.0.189



# telnet up
if [ -x /sbin/telnetd ];
then
    telnetd&
fi

# ftp up
if [ -x /bin/tcpsvd ];
then
    tcpsvd 0 21 ftpd -w /home &
fi
